@model CapaModelo.Modelos.mReservaSalon
@{
    ViewBag.Title = "Reserva salon";
}

<h2>Reserva de Salon de Reuniones</h2>

<div class="row">
    <div class="col-md-4">

        <form method="post" action="/reservaSalon/create" id="formulario">
            <input type="number" hidden id="id" name="id">

            <div class="form-group">
                <label for="nombre">Salon</label>
                @Html.DropDownList("salon", new SelectList(Model.Salones, "ID_Salon", "Nombre_Salon"), new { @class = "form-control", @required = true })
            </div>

            <div class="form-group">
                <label for="nombre">Estudiante</label>
                @Html.DropDownList("estudiante", new SelectList(Model.Estudiantes, "Matricula", "Nombre"), new { @class = "form-control", @required = true })
            </div>

            <div class="form-group">
                <label for="autor">Fecha Inicio</label>
                <input required type="date" class="form-control" id="autor" name="fechaInicio">
            </div>

            <div class="form-group">
                <label for="autor">Fecha Fin</label>
                <input required type="date" class="form-control" id="autor" name="fechaFin">
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Salon</th>
                    <th>Estudiante</th>
                    <th>Fin</th>
                    <th>Estatus</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Reservas_Salones)
                {
                    <tr>
                        <td>@item.ID_Reserva_Salon</td>
                        <td>@item.TM_Salones_Reunione.Nombre_Salon</td>
                        <td>@item.TM_Estudiante.Nombre</td>
                        <td>@item.Inicio_Reserva</td>
                        <td>@item.Final_Reserva</td>
                        @if (@item.FlagActivo)
                        {
                            <td style="color: forestgreen">Activo</td>
                        }
                        else
                        {
                            <td style="color: darkred">Inactivo</td>
                        }
                        <td>
                            <button type="button" class="btn btn-info btn-sm" onclick="editar(@item.ID_Reserva_Salon)">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" onclick="eliminar(@item.ID_Libro, @item.FlagActivo)">
                                <span class="glyphicon glyphicon-trash"></span>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>

<script>

    (function () {
        setTimeout(() => {
        const userId = @Model.EstudianteId;
        if (userId) {
            $("#estudiante").val(userId);
            $("#estudiante").prop('disabled','true');
        }

        }, 500)
    })();


    function editar(id, nombre, autor, genero, paginas) {
        $("#id").val(id);
        $("#nombre").val(nombre);
        $("#autor").val(autor);
        $("#genero").val(genero);
        $("#paginas").val(paginas);
    }

    function eliminar(id, activo) {
        const opcion = confirm(activo?"Desea Eliminar?":"Desea Reactivar?");

        if (!opcion)
            return;

        $.ajax({
            type: "POST",
            url: "/reservaSalon/Delete/" + id,
            success: () => location.reload(),
        });
    }
</script>

